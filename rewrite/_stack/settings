#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/nginx/rewrite"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_url_rewrite"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_url_rewrite"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_STACKPREFIX}_nginx_config_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_STACKPREFIX}_nginx_config_volume:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_URL_REWRITE_ENVIRONMENT,\
$VCW_STACK_URL_REWRITE_COMMAND,\
$VCW_STACK_URL_REWRITE_PORTS,\
$VCW_STACK_URL_REWRITE_VOLUMES,\
$VCW_STACK_URL_REWRITE_NETWORKS,\
$VCW_STACK_URL_REWRITE_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="nginx"
export VCW_STACK_GLOBAL_IMAGE_NAME="vcwc/nginx.base"
export VCW_STACK_URL_REWRITE_ENVIRONMENT="\
'VCW_STACK_NGINX_CONF_LOCATION=${DOLLAR}{VCW_STACK_URL_REWRITE_ENVIRONMENT_CONF_PATH}', \
'VCW_STACK_NGINX_CONF_PROXY_PASS=${DOLLAR}{VCW_STACK_URL_REWRITE_ENVIRONMENT_CONF_UPSTREAM}'"
export VCW_STACK_URL_REWRITE_COMMAND=
export VCW_STACK_URL_REWRITE_PORTS=
#export VCW_STACK_URL_REWRITE_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_nginx_config_volume:/conteco/pwd"
export VCW_STACK_URL_REWRITE_VOLUMES="'${DOLLAR}{VCW_STACK_STACKPREFIX}_nginx_config_volume:/vcw/pwd'"
export VCW_STACK_URL_REWRITE_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_URL_REWRITE_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_nginx_config_volume: { external: true }"
#export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_nginx_config_volume: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS nginx.base
export VCW_STACK_URL_REWRITE_COMPOSE_EXTENSIONS="      labels: [traefik.enable=true,traefik.docker.network=${VCW_STACK_NETWORKGLOBAL}_overlay, traefik.http.services.${VCW_STACK_STACKPREFIX}_nginx.loadbalancer.server.port=80, traefik.http.routers.${VCW_STACK_STACKPREFIX}_nginx.entrypoints=conteco, traefik.http.routers.${VCW_STACK_STACKPREFIX}_nginx.rule=PathPrefix(\"/${VCW_STACK_URLPREFIX}/streamsets\")]"
export VCW_STACK_URL_REWRITE_ENVIRONMENT_CONF_PATH="/${VCW_STACK_URLPREFIX}/streamsets"
export VCW_STACK_URL_REWRITE_ENVIRONMENT_CONF_UPSTREAM="${VCW_STACK_STACKPREFIX}_streamsets:18630"
export VCW_STACK_URL_REWRITE_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_URL_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
