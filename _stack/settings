#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/nginx"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_nginx"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_nginx"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST=
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_NGINX_ENVIRONMENT,\
$VCW_STACK_NGINX_COMMAND,\
$VCW_STACK_NGINX_PORTS,\
$VCW_STACK_NGINX_NETWORKS,\
$VCW_STACK_NGINX_VOLUMES,\
$VCW_STACK_NGINX_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="nginx"
export VCW_STACK_GLOBAL_IMAGE_NAME="nginx"
export VCW_STACK_NGINX_ENVIRONMENT=
export VCW_STACK_NGINX_COMMAND=
export VCW_STACK_NGINX_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_NGINX_VOLUMES=
export VCW_STACK_NGINX_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES=
# END GLOBAL SETTINGS

# START SETTINGS nginx.base
export VCW_STACK_NGINX_COMPOSE_EXTENSIONS="      labels: [traefik.enable=true, traefik.http.services.${VCW_STACK_STACKPREFIX}_nginx.loadbalancer.server.port=80, traefik.http.routers.${VCW_STACK_STACKPREFIX}_nginx.entrypoints=conteco, traefik.http.routers.${VCW_STACK_STACKPREFIX}_nginx.rule=PathPrefix(\"/${VCW_STACK_URLPREFIX}\")]${newline}${DOLLAR}{VCW_STACK_NGINX_COMPOSE_EXTENSIONS}"
export VCW_STACK_NGINX_PORTS=
export VCW_STACK_NGINX_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_NGINX_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
